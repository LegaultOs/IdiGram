<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A274F"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.idigram.MainActivity" >

    <LinearLayout
        android:id="@+id/layoutmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_pick_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"
            android:text="Pick Image" />

        <ImageView
            android:id="@+id/effect_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layouttabs"
            android:layout_weight="0.5"
            android:src="@drawable/image" />

        <LinearLayout
            android:id="@+id/layouttabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/tabstabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#00FF00"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="0.33"
                    android:background="@drawable/forma"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="tabClicked"
                    android:text="Tab1" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"

                    android:background="@drawable/separator" />

                <TextView
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="0.33"
                    android:background="@drawable/forma"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="tabClicked"
                    android:text="Tab2" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"

                    android:background="@drawable/separator" />

                <TextView
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="0.33"
                    android:background="@drawable/forma"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="tabClicked"
                    android:text="Tab3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/espacio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab1"
                android:orientation="vertical" >

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/effect_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_black" />

                        <ImageView
                            android:id="@+id/effect_boost_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_boost_1" />

                        <ImageView
                            android:id="@+id/effect_boost_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_boost_2" />

                        <ImageView
                            android:id="@+id/effect_boost_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_boost_3" />

                        <ImageView
                            android:id="@+id/effect_brightness"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_brightness" />

                        <ImageView
                            android:id="@+id/effect_color_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_color_blue" />

                        <ImageView
                            android:id="@+id/effect_color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_color_green" />

                        <ImageView
                            android:id="@+id/effect_color_red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_color_red" />

                        <ImageView
                            android:id="@+id/effect_color_depth_32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_color_depth_32" />

                        <ImageView
                            android:id="@+id/effect_color_depth_64"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_color_depth_64" />

                        <ImageView
                            android:id="@+id/effect_contrast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_contrast" />

                        <ImageView
                            android:id="@+id/effect_emboss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_emboss" />

                        <ImageView
                            android:id="@+id/effect_engrave"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_engrave" />

                        <ImageView
                            android:id="@+id/effect_flea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_flea" />

                        <ImageView
                            android:id="@+id/effect_gamma"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_gamma" />

                        <ImageView
                            android:id="@+id/effect_gaussian_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_gaussian_blue" />

                        <ImageView
                            android:id="@+id/effect_grayscale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_grayscale" />
                        <!-- <ImageView -->
                        <!-- android:id="@+id/effect_highlight" -->
                        <!-- android:layout_width="wrap_content" -->
                        <!-- android:layout_height="wrap_content" -->
                        <!-- android:padding="2dp" -->
                        <!-- android:onClick="buttonClicked" -->
                        <!-- android:src="@drawable/effect_highlight" /> -->

                        <ImageView
                            android:id="@+id/effect_hue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_hue" />

                        <ImageView
                            android:id="@+id/effect_invert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_invert" />

                        <ImageView
                            android:id="@+id/effect_mean_remove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_mean_remove" />
                        <!-- <ImageView -->
                        <!-- android:id="@+id/effect_reflaction" -->
                        <!-- android:layout_width="wrap_content" -->
                        <!-- android:layout_height="wrap_content" -->
                        <!-- android:padding="2dp" -->
                        <!-- android:onClick="buttonClicked" -->
                        <!-- android:src="@drawable/effect_reflaction" /> -->

                        <ImageView
                            android:id="@+id/effect_round_corner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_round_corner" />

                        <ImageView
                            android:id="@+id/effect_saturation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_saturation" />

                        <ImageView
                            android:id="@+id/effect_sepia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_sepia" />

                        <ImageView
                            android:id="@+id/effect_sepia_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_sepia_blue" />

                        <ImageView
                            android:id="@+id/effect_sepia_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_sepia_green" />

                        <ImageView
                            android:id="@+id/effect_sheding_cyan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_sheding_cyan" />

                        <ImageView
                            android:id="@+id/effect_sheding_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_sheding_green" />

                        <ImageView
                            android:id="@+id/effect_sheding_yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_sheding_yellow" />

                        <ImageView
                            android:id="@+id/effect_smooth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_smooth" />

                        <ImageView
                            android:id="@+id/effect_tint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_tint" />

                        <ImageView
                            android:id="@+id/effect_watermark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClicked"
                            android:padding="2dp"
                            android:src="@drawable/effect_watermark" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>